
<launch>

    <arg name="markerSize"      default="0.05"/>    <!-- in m -->
    <arg name="ref_frame"       default=""/>  <!-- leave empty and the pose will be published wrt param parent_name -->


    <node pkg="aruco_ros" type="marker_publisher" name="aruco_marker_publisher">
        <remap from="/camera_info" to="/airsim_node/drone_1/bottom_center_custom/Scene/camera_info" />
        <remap from="/image" to="/airsim_node/drone_1/bottom_center_custom/Scene" />
        <param name="image_is_rectified" value="True"/>
        <param name="marker_size"        value="$(arg markerSize)"/>
        <param name="reference_frame"    value="$(arg ref_frame)"/>   <!-- frame in which the marker pose will be refered -->
        <param name="camera_frame"       value="$bottom_center_custom_optical/static"/>
    </node>

</launch>